{% extends 'base.html.twig' %}

{% block title %}
{{ parent() }} - portfolio
{% endblock %}

{% block body %}

<div id="top" class="row">
    <div class="page-header">
        <h2>View portfolio <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span> </h2>
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <p><strong>Id</strong></p>
        <p>
            {{ portfolio.id }}
        </p>

    </div>
    <div class="col-md-6">
        <p><strong>Iduser</strong></p>
        <p>
            {{ portfolio.idUser }}
        </p>

    </div>
    <div class="col-md-6">
        <p><strong>Name</strong></p>
        <p>
            {{ portfolio.name }}
        </p>

    </div>
    <div class="col-md-6">
        <p><strong>Idsection</strong></p>
        <p>
            {{ portfolio.idSection }}
        </p>

    </div>
    <div class="col-md-6">
        <p><strong>Workdate</strong></p>
        <p>
            {% if portfolio.workDate %}{{ portfolio.workDate|date('Y-m-d') }}{% endif %}
        </p>

    </div>
    <div class="col-md-6">
        <p><strong>Info</strong></p>
        <p>
            {{ portfolio.info }}
        </p>

    </div></div>

<hr/>


<div class="form-group">
    <a class="btn btn-default" href="{{ path('portfolio') }}">
        <span class="glyphicon glyphicon-list" aria-hidden="true"></span>
        Back to list
    </a>
    <a class="btn btn-primary" href="{{ path('portfolio_edit', { 'id':  portfolio.id }) }}">
        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
        Edit
    </a>
    <a class="btn btn-info" href="{{ path('portfolio_new') }}">
        <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
        New
    </a>
    <form action="{{ path('portfolio_delete', { 'id': portfolio.id }) }}" method="post" style="display: inline-block">
        <input type="hidden" name="_method" value="DELETE" />
        {{ form_widget(delete_form) }}
        <button class="btn btn-danger" type="submit" onclick="return confirm('Are you sure');">
            <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
            Delete
        </button>
    </form>
</div>


{% endblock %}

