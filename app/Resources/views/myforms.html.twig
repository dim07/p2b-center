    $("#stage_order_isLegalEntity").click( function(){
        var contractor = $( "#stage_order_Contractor" );
        var isp = $( "#stage_order_UserIsp" );
        if( $(this).is(':checked') ) {
            contractor.prop( "disabled", false );
            isp.prop( "disabled", true );
            contractor.closest(".form-group").show(1000);
            isp.closest(".form-group").hide(1000);

        } else {
            contractor.prop( "disabled", true );
            isp.prop( "disabled", false );
            contractor.closest(".form-group").hide(1000);
            isp.closest(".form-group").show(1000);
        }
     });
    
    </script>
