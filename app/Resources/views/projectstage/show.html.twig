{% extends 'base.html.twig' %}

{% block title %}
{{ parent() }} - projectStage
{% endblock %}

{% block body %}

<div id="top" class="row">
    <div class="page-header">
        <h2>View projectStage <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span> </h2>
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <p><strong>Id</strong></p>
        <p>
            {{ projectStage.id }}
        </p>

    </div>
    <div class="col-md-6">
        <p><strong>Idproject</strong></p>
        <p>
            {{ projectStage.idProject }}
        </p>

    </div>
    <div class="col-md-6">
        <p><strong>Name</strong></p>
        <p>
            {{ projectStage.name }}
        </p>

    </div>
    <div class="col-md-6">
        <p><strong>Enddate</strong></p>
        <p>
            {% if projectStage.endDate %}{{ projectStage.endDate|date('Y-m-d') }}{% endif %}
        </p>

    </div>
    <div class="col-md-6">
        <p><strong>Cost</strong></p>
        <p>
            {{ projectStage.cost }}
        </p>

    </div>
    <div class="col-md-6">
        <p><strong>Info</strong></p>
        <p>
            {{ projectStage.info }}
        </p>

    </div></div>

<hr/>


<div class="form-group">
    <a class="btn btn-default" href="{{ path('projectstage') }}">
        <span class="glyphicon glyphicon-list" aria-hidden="true"></span>
        Back to list
    </a>
    <a class="btn btn-primary" href="{{ path('projectstage_edit', { 'id':  projectStage.id }) }}">
        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
        Edit
    </a>
    <a class="btn btn-info" href="{{ path('projectstage_new') }}">
        <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
        New
    </a>
    <form action="{{ path('projectstage_delete', { 'id': projectStage.id }) }}" method="post" style="display: inline-block">
        <input type="hidden" name="_method" value="DELETE" />
        {{ form_widget(delete_form) }}
        <button class="btn btn-danger" type="submit" onclick="return confirm('Are you sure');">
            <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
            Delete
        </button>
    </form>
</div>


{% endblock %}

